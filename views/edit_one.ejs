<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel=stylesheet href="/main.css">
        <title>Edit <%- student.Stu_FName %> <%- student.Stu_LName %></title>
    </head>

    <body>
        <%- include('common/header'); %>
        <div class='content'>
            <h1>Edit <%- student.Stu_FName %> <%- student.Stu_LName %></h1>
            <h3>
                <%= message %>
                <form method='post' class='edit_form'>
                    <label for='course'>Change Course: </label>
                    <select class='form-control' name='Stu_Course' id='course' required>
                        <% courses.forEach(course => { %>
                            <option value='<%- course.Crs_Code %>' 
                                <% if (course.Crs_Code === student.Stu_Course) { %>
                                    selected
                                <% } %>>
                                <%= course.Crs_Title %>
                            </option>
                        <% }) %>
                    </select>
                    <p></p>
                    <label for='Stu_Phone'>Change Phone Number: </label>
                    <input type='tel' value='<%= student.Stu_Phone %>' name='Stu_Phone' required>
                    <p></p>
                    <input type='submit' value='Update'>
                </form>
            </h3>
        </div>
    </body>
</html>